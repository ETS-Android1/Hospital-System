<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DoctorDescription">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/makeAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="35dp"
                android:textColor="@color/white"
                android:text="Name "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/white"
                android:fontFamily="casual"
                android:text="Name :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="67dp"
                android:layout_height="30dp"
                android:layout_marginStart="76dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:fontFamily="casual"
                android:text="Age :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/age"
                android:layout_width="185dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Age"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="106dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="36dp"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:text="Speciality :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/speciality"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="spec"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/age" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="106dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="30dp"
                android:fontFamily="casual"
                android:text="Phone :"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speciality" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="146dp"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="phone"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/speciality" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="36dp"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:text="E-mail :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:text="email"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="173dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                android:text="gender"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="40dp"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:text="Gender :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="135dp"
                android:layout_height="43dp"
                android:layout_marginStart="112dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:fontFamily="casual"
                android:text="Description :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availableDays2" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_marginEnd="39dp"
                android:text="desc"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="39dp"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:text="Available Days: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.062"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender" />

            <TableRow
                android:id="@+id/availableDays"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="324dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDays" >
                <RadioButton
                    android:id="@+id/Saturday"
                    android:text="Saturday"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:editable="false"/>
                <RadioButton
                    android:id="@+id/Sunday"
                    android:textColor="@color/white"
                    android:text="Sunday"
                    android:layout_width="wrap_content"
                    android:editable="false"/>

                <RadioButton
                    android:id="@+id/Monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:editable="false"
                    android:text="Monday" />
                <RadioButton
                    android:id="@+id/Tuesday"
                    android:text="Tuesday"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:editable="false"/>
            </TableRow>
            <TableRow
                android:id="@+id/availableDays2"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="324dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availableDays" >
                <RadioButton
                    android:id="@+id/Wednesday"
                    android:text="Wednesday"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:editable="false"/>
                <RadioButton
                    android:id="@+id/Thursday"
                    android:text="Thursday"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:editable="false"/>
                <RadioButton
                    android:id="@+id/Friday"
                    android:text="Friday"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:editable="false"/>

            </TableRow>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/makeAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/btn_round"
        android:fontFamily="casual"
        android:lineSpacingExtra="8sp"
        android:text="Book an appointment"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="153dp"
        android:layout_height="112dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/doctor_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>